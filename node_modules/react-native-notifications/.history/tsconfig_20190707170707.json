{
  "extends": "./tsconfig-strict.json",
  "compilerOptions": {
    "allowJs": false,
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react-native",
    "declaration": true,
    "skipLibCheck": true,
    "types": [
      "jest",
      "lodash",
      "react",
      "react-native",
      "react-test-renderer"
    ]
  },
  "include": [
    "./lib/src/**/*",
    "./test/**/*"
  ]
}
